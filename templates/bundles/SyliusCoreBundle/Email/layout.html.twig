{% block body %}
    {% autoescape false %}
        {% set brandColor = '#C97A2B' %}
        {# PNG dla lepszej kompatybilno≈õci w klientach poczty #}
        {% set logo = sylius_channel_url(asset('static/brand/logo-galante-wypieki.png'), channel) %}

        <div style="font-family: sans-serif; background: #eee; padding-top: 30px; padding-bottom: 30px; font-size: 16px; color: #333; line-height: 1.5">
            <style>
                a { color: {{ brandColor }} !important; text-decoration: none; }
            </style>
            <div style="max-width: 600px; margin: 20px auto;">
                <div style="margin-bottom: 30px; text-align: center;">
                    {% if sylius_bundle_loaded_checker('SyliusShopBundle') %}
                        {% set url = sylius_channel_url(path('sylius_shop_homepage', {'_locale': localeCode}), channel) %}
                        <a href="{{ url|raw }}">
                            <img src="{{ logo }}" alt="Galante Wypieki" style="width: 170px">
                        </a>
                    {% else %}
                        <img src="{{ logo }}" alt="Galante Wypieki" style="width: 170px">
                    {% endif %}
                </div>

                <div style="background: #fff; padding: 40px 30px;">
                    {% block content %}{% endblock %}
                </div>

                <div style="text-align: center; padding: 20px 0;">
                    <a href="https://galantewypieki.pl" target="_blank" style="color: {{ brandColor }}; text-decoration: none;">galantewypieki.pl</a>
                </div>
            </div>
        </div>
    {% endautoescape %}
{% endblock %}
