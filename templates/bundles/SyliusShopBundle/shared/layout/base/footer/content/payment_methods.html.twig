<div class="col-12 text-center col-md-6 order-md-4 text-md-start col-lg-3 order-lg-4 text-lg-center">
    <div class="mb-3 fw-medium">Partnerzy:</div>

    {% set partner_logos = [
        'partner-cochise-logo.jpg',
        'partner-el-buos-logo.jpg',
        'partner-kolektyw-logo.jpg',
        'partner-milk-logo.jpg',
        'partner-pawilon-logo.png',
    ] %}

    {% set shuffled_logos = partner_logos|shuffle %}

    <div class="row row-cols-5 g-2 mb-4">
        {% for logo in shuffled_logos %}
            <div class="col">
                <div class="d-block border rounded p-2">
                    <img class="img-fluid" src="{{ asset('static/partners/' ~ logo) }}" width="100%" height="100%" alt="Partner">
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="d-flex justify-content-center justify-content-md-start justify-content-lg-center gap-3 mb-5">
        <a class="link-reset" href="https://www.instagram.com/galante_wypieki/" target="_blank" aria-label="instagram logo">{{ ux_icon('tabler:brand-instagram', { class: 'icon icon-md' }) }}</a>
        <a class="link-reset" href="https://www.facebook.com/profile.php?id=61581695908340" target="_blank" aria-label="facebook logo">{{ ux_icon('tabler:brand-facebook', { class: 'icon icon-md' }) }}</a>
        {#<a class="link-reset" href="https://x.com/Sylius" target="_blank" aria-label="x logo">{{ ux_icon('tabler:brand-x', { class: 'icon icon-md' }) }}</a>#}
    </div>
</div>
